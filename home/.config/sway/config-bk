bindsym Print exec grim ~/capturas/$(date +%Y-%m-%d_%H-%m-%s).png
bindsym $mod+Print exec grim -g "$(slurp)" ~/capturas/$(date +%Y-%m-%d_%H-%m-%s).png
bindsym Alt+Print exec wf-recorder
bindsym $mod+Alt+Print exec wf-recorder -a 

